<%- include('../header', {user: user, pageTitle: null}) %>

<h1><%= user.name %> <a href="/users/<%= user.id %>/edit">edit</a></h1>

<% if (user.pets.length) { %>
  <p>View <%= user.name %>'s pets:</p>
  <ul>
    <% user.pets.forEach(function(pet){ %>
      <li><a href="/pets/<%= pet.id %>"><%= pet.name %></a></li>
    <% }); %>
  </ul>
<% } else { %>
  <p>No pets!</p>
<% } %>

<%- include('../footer') %>