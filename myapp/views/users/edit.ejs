<%- include('../header', {user: user, pageTitle: 'edit'}) %>

<h1><%= user.name %></h1>
<form action="/users/<%= user.id %>?_method=put" method="post">
  <label for="user[name]">Name:
    <input type="text" name="user[name]" value="<%= user.name %>">
  </label>

  <input type="submit" name="submit" value="Update">
</form>

<form action="/users/<%= user.id %>/pet" method="post">
  <label for="pet[name]">Pet:
    <input type="text" name="pet[name]" placeholder="Pet Name">
  </label>

  <input type="submit" name="submit" value="Add">
</form>

<%- include('../footer') %>
